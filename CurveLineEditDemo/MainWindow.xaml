<Window x:Class="CurveLineEditDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurveLineEditDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="TestCanvas" Background="LightGray"
                MouseUp="TestCanvas_OnMouseUp"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20">
            <Button x:Name="CompensateButton" Content="补偿曲线点" Click="CompensateButton_OnClick" Height="26" Width="100" Margin="6 0 0 0"/>
            <Button x:Name="ClearButton" Content="清除" Click="ClearButton_OnClick" Height="26" Width="100" Margin="6 0 0 0"/>
        </StackPanel>
    </Grid>
</Window>
